/*
  Separate TypeScript config for "*.script.ts" files used in unit tests.
*/
{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../out-tsc/microfrontend-platforms.script.spec",
    "strict" : true
  },
  "include": [
    "**/*.script.ts"
  ],
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
